<table class="table table-hover">
    <thead>
        <tr>
            <th class="text-center" scope="col">Subject</th>
            <th class="text-center" scope="col">Student</th>
            <th class="text-center" scope="col">Time</th>
            <th class="text-center" scope="col">Info</th>
            <th class="text-center" scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        <% @user.given_lessons.each do |l| %>
        <tr>
            <th class="text-center" scope="row"><%= l.subject %></th>
            <td class="text-center"><%= name_link_or_nil(l.student) %></td>
            <td class="text-center"><%= l.time.strftime("%A, %d %b %Y at %l:%M %p %Z") %></td>
            <td class="text-center"><%= link_to "tell me more", lesson_path(l), class: "btn btn-outline-success" %>
            </td>
            <td class="text-center"><h3><span class="badge badge-success ba"><%= status(l) %></span></h3></td>
        </tr>
        <% end %>
    </tbody>
</table>