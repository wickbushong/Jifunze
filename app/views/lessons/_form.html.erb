<% if !@lesson.errors.messages.empty? %>
        <% @lesson.errors.full_messages.each do |e| %>
            <div class="alert alert-danger" role="alert">
                <%= e %>
            </div>
        <% end %>
<% end %>

<%= form_for @lesson do |f| %>

    <div class="form-row">
        <div class="col">
            <%= f.text_field :subject, class: "form-control", placeholder: "Subject" %>
        </div>
        <div class="col">
            <%= f.text_field :location, class: "form-control", placeholder: "Location" %>
        </div>
    </div>
    <br>
    <div class="form-row">
        <div class="col">
            <%= f.datetime_field :time, class: "form-control datetimepicker-input"  %>
        </div>
        <div class="col">
            <%= f.number_field :duration, class: "form-control", placeholder: "Duration (in minutes)" %>
        </div>
    </div>
    <br>
    <div class="form-row">
        <div class="col">
            <%= f.text_area :notes, class: "form-control", placeholder: "Description (topics covered, grade level, materials required, etc.)", rows: "5" %>
        </div>
    </div>
    <br>
    <div class="form-row">
        <div class="col">
            <%= f.submit class: "btn btn-success" %>
        </div>
    </div>
<% end %>

