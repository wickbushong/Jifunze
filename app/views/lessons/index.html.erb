<% if @user %>
    <h2><%= @user.name %>'s Available Lesson Slots</h2>
<% else %>
    <h2>All Available Lessons</h2>
<% end %>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th scope="col">Subject</th>
            <th scope="col">Instructor</th>
            <th scope="col">Time</th>
            <th scope="col">Booking Link</th>
        </tr>
    </thead>
    <tbody>
        <% @lessons.each do |l| %>
        <tr>
            <th scope="row"><%= l.subject %></th>
            <td><%= l.instructor.name %></td>
            <td><%= l.time.strftime("%A, %d %b %Y at%l:%M %p %Z") %></td>
            <td>INSERT BOOKING LINK</td>
        </tr>
        <% end %>
    </tbody>
</table>