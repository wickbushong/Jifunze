<h2>Log In!</h2>

<% if !@user.errors.messages.empty? %>
<ul>
    <% @user.errors.full_messages.each do |e| %>
        <li><%= e %></li>
    <% end %>
</ul> 
<% end %>

<%= form_for @user, url: '/login' do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit "Log In" %>
    
<% end %>